<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.avanceradjavagroup6slutprojekt.SearchController">
    <TextArea fx:id="shoppingListArea" prefHeight="200" promptText="Enter shopping list items here..." />
   <TextField fx:id="itemName" prefHeight="25.0" prefWidth="176.0" promptText="Write product here" />
    <Button layoutX="23.0" layoutY="23.0" onAction="#addItemToShoppingList" text="Add Item" />
    <Button onAction="#saveShoppingList" text="Save List" />
    <Button onAction="#readOldShoppingList" text="Read Old List" />
    <Button onAction="#clearShoppingList" text="Clear List" />
    <Button onAction="#closeShoppingListWindow" text="Close" />
</VBox>
