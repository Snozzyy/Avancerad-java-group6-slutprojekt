<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" spacing="10" fx:controller="com.example.avanceradjavagroup6slutprojekt.SearchController">
    <TextArea fx:id="shoppingListArea" promptText="Enter shopping list items here..." prefHeight="200"/>
    <Button text="Add Item" onAction="#addItemToShoppingList"/>
    <Button text="Save List" onAction="#saveShoppingList"/>
    <Button text="Read Old List" onAction="#readOldShoppingList"/>
    <Button text="Clear List" onAction="#clearShoppingList"/>
    <Button text="Close" onAction="#closeShoppingListWindow"/>
</VBox>
